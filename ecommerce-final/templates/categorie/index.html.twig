{% extends 'base.html.twig' %}

{% block title %}Gestion des catégories{% endblock %}

{% block h1 %}Gestion des catégories{% endblock %}

{% block body %}

    <a class="btn btn-primary" href="{{ path('app_categorie_new') }}">Ajouter</a>

    <table class="table text-center">
        <thead class="table-info">
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            {% for categorie in categories %}
                <tr>
                    <td>{{ categorie.id }}</td>
                    <td>{{ categorie.nom }}</td>
                    <td>
                        <a class="btn btn-warning" href="{{ path('app_categorie_show', {'id': categorie.id}) }}">Fiche</a>
                        <a class="btn btn-info" href="{{ path('app_categorie_edit', {'id': categorie.id}) }}">Modifier</a>
                        {{ include('categorie/_delete_form.html.twig') }}
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="3">Aucun résultat</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

    
{% endblock %}
